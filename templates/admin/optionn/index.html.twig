{% extends 'base.html.twig' %}  

{% block titile 'Gérer les options' %}

{% block body %}
<div class= "container mt-4">

<h1> Gérer les options</h1>

{%  for message in app.flashes('success') %}
<div class="alert alert-success">
{{ message }}
</div>

{% endfor %}

<table class="table table-striped"> 
<thead>
<tr>
<th>Nom</th>
<th>Action</th>
</tr>
</thead>

<tbody>
{% for optionn in optionns %}
    <tr>
    <td>{{ optionn.name }}</td>
    <td>
    <a href="{{ path('admin.optionn.edit',{ id:  optionn.id})}}" class="btn btn-secondary">Editer</a>
        <form  method="POST" action= "{{ path('admin.optionn.delete',{id:  optionn.id})}}" style="display: inline-block" onsubmit="return confirm('Etez vraiment sur ?')">
        <input type="hidden" name="_method" value="DELETE">
        
        <input type="hidden" name="_token" value="{{ csrf_token('admin/delete' ~ optionn.id) }}">
        <button class="btn btn-danger">Supprimer</button>
        </form>
        </td>
    </tr>
{% endfor %}
</tbody>

</table>

<div class="text-right">
 <a  href="{{ path('admin.optionn.new') }}" class="btn btn-primary">Créer une nouvelle option</a>
</div>
      


</div>

  
{% endblock %}